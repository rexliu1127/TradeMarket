    function doQuery() {

        $.get("http://220.130.10.50:6868/api/webapi/getProductCount?departmentID=" + $('#department_id').val() + "&customizeID=" + $('#customize_id').val() + "&productName=" + $('#productName').val() + "&productTypeName=" + $('#product_type_name').val(), function (data) {
